//BrittanyDrago
//Random

//Variables
float x;
float y;
float step = 3;

void setup() {
  size (640, 480);
  x = width/2;
  y = height/4;
}

void draw() {
  noStroke();

  //Ball
  background(#FF4040);
  fill(#77E89F);
  rect(0, 375, 640, 100);
  fill(#08712E);
  rect(0, 400, 640, 100);
  fill(0);
  ellipse(x, y, 50, 50);

  //RandomMovement
  x = x + random(-step, step);
  y = x + random(step, step);
//Constrain
  x = constrain (x, 0, width);
  y = constrain (y, 0, height);
